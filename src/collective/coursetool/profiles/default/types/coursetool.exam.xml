<?xml version="1.0" encoding="UTF-8"?>
<object xmlns:i18n="http://xml.zope.org/namespaces/i18n"
        meta_type="Dexterity FTI"
        name="coursetool.exam"
        i18n:domain="collective.coursetool"
>
  <property name="title"
            i18n:translate=""
  >Exam</property>
  <property name="description"
            i18n:translate=""
  />

  <property name="icon_expr">string:pencil-square</property>
  <property name="factory">coursetool.exam</property>
  <property name="add_view_expr">string:${folder_url}/++add++coursetool.exam</property>
  <property name="link_target" />
  <property name="immediate_view">view</property>
  <property name="global_allow">True</property>
  <property name="allow_discussion">False</property>
  <property name="default_view">view</property>
  <property name="view_methods">
    <element value="view" />
  </property>
  <property name="default_view_fallback">False</property>
  <property name="add_permission">cmf.AddPortalContent</property>
  <property name="klass">collective.coursetool.content.Exam</property>
  <property name="behaviors">
    <element value="plone.namefromtitle" />
    <element value="plone.richtext" />

    <!-- bda.plone.shop -->
    <element value="bda.shop.buyable"/>
    <element value="bda.shop.stock"/>
    <element value="bda.shop.notificationtext.item" />
    <element value="bda.shop.notificationtext.global" />
    <element value="bda.shop.buyableperiod" />
  </property>
  <property name="schema">collective.coursetool.content.IExamSchema</property>
  <property name="model_source" />
  <property name="model_file" />


  <alias from="(Default)"
         to="(dynamic view)"
  />
  <alias from="edit"
         to="@@edit"
  />
  <alias from="sharing"
         to="@@sharing"
  />
  <alias from="view"
         to="(selected layout)"
  />
  <action action_id="view"
          category="object"
          condition_expr=""
          description=""
          icon_expr="string:toolbar-action/view"
          link_target=""
          title="View"
          url_expr="string:${object_url}"
          visible="True"
  >
    <permission value="View" />
  </action>
  <action action_id="edit"
          category="object"
          condition_expr=""
          description=""
          icon_expr="string:toolbar-action/edit"
          link_target=""
          title="Edit"
          url_expr="string:${object_url}/edit"
          visible="True"
  >
    <permission value="Modify portal content" />
  </action>
</object>

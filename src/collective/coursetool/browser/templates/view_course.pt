<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      lang="en"
      metal:use-macro="context/@@main_template/macros/master"
      xml:lang="en"
      i18n:domain="collective.coursetool"
      i18n:ignore=""
>

  <body>
    <div class="coursetool-wrapper"
         metal:fill-slot="main"
         tal:define="
           is_admin view/is_admin;
           members view/members;
           can_add_to_cart view/can_add_to_cart;
         "
    >

      <a class="btn btn-sm btn-outline-primary mb-3"
         href="${python:context.aq_parent.absolute_url()}"
         tal:condition="is_admin"
      >
        <tal:icon replace="structure python:icons.tag('arrow-left-circle', tag_class='plone-icon')" />
        <span i18n:translate="">Back to overview</span>
      </a>

      <div class="card">

        <div class="card-header">
          <h1 i18n:translate="course_title">
                    Course:
            <tal:block replace="context/Title"
                       i18n:name="title"
            />
          </h1>

          <ul class="nav nav-tabs card-header-tabs"
              tal:condition="is_admin"
          >
            <li class="nav-item">
              <a class="nav-link active"
                 id="default-tab"
                 aria-current="true"
                 href="#"
                 data-bs-target="#tab-default"
                 data-bs-toggle="tab"
                 i18n:translate=""
              >Information</a>
            </li>
            <li class="nav-item">
              <a class="nav-link"
                 id="members-tab"
                 aria-current="true"
                 href="#"
                 data-bs-target="#tab-members"
                 data-bs-toggle="tab"
              >
                <span i18n:translate="">Members</span>
                <span class="badge text-bg-secondary">${python:len(members)}</span>
              </a>
            </li>
          </ul>
        </div>

        <div class="card-body tab-content">
          <div class="tab-pane fade show active"
               id="tab-default"
               aria-labelledby="default-tab"
               role="tabpabel"
          >
            <div class="factbox my-3 row row-cols-1 row-cols-lg-2">
              <tal:block repeat="info_fld python:['id', 'start', 'end', 'type', 'duration']">
                <div class="col"
                     tal:define="
                       wdgt python:view.w.get(info_fld);
                     "
                     tal:condition="python:getattr(context, info_fld, None) and wdgt"
                >
                  <div class="text-bg-light py-1 px-2">
                    <span class="fw-bold"
                          tal:content="structure wdgt/label"
                    ></span>:
                    <span tal:replace="structure wdgt/render"></span>
                  </div>
                </div>
              </tal:block>
              <div class="col"
                   tal:define="
                     locations context/get_locations;
                   "
                   tal:condition="locations"
              >
                <div class="text-bg-light py-1 px-2"
                     tal:define="
                       wdgt python:view.w.get('locations');
                     "
                >
                  <span class="fw-bold"
                        tal:content="structure wdgt/label"
                  ></span>:
                  <span tal:replace="structure python:', '.join(['%s, %s' % (e.title, e.city) for e in locations])"></span>
                </div>
              </div>
              <div class="col"
                   tal:define="
                     exams context/get_exams;
                   "
                   tal:condition="exams"
              >
                <div class="text-bg-light py-1 px-2"
                     tal:define="
                       wdgt python:view.w.get('exams');
                     "
                >
                  <span class="fw-bold"
                        tal:content="structure wdgt/label"
                  ></span>:
                  <a href="${e/absolute_url}"
                     tal:repeat="e exams"
                     tal:omit-tag="not:is_admin"
                  >
                                    ${e/title} (${python:e.date.strftime('%d.%m.%Y %H:%M')})
                  </a>
                </div>
              </div>
              <div class="col"
                   tal:define="
                     instructors context/get_instructors;
                   "
                   tal:condition="instructors"
              >
                <div class="text-bg-light py-1 px-2"
                     tal:define="
                       wdgt python:view.w.get('instructors');
                     "
                >
                  <span class="fw-bold"
                        tal:content="structure wdgt/label"
                  ></span>:
                  <span tal:replace="structure python:', '.join([i.title for i in instructors])"></span>
                </div>
              </div>
            </div>

            <strong i18n:translate="">Occurrences</strong>
            <div tal:content="structure view/w/occurrences/render"></div>

            <div id="viewlet-below-content-description"
                 tal:content="structure provider:plone.belowcontentdescription"
            ></div>

            <section id="section-text"
                     tal:condition="python:getattr(context.aq_base, 'text', None)"
            >
              <strong i18n:translate="">Course Description</strong>:
              <div id="parent-fieldname-text"
                   tal:content="structure python:context.text.output_relative_to(view.context)"
              >
                        Text
              </div>
            </section>

            <tal:block condition="is_admin">
              <a class="pat-plone-modal btn btn-primary"
                 href="${python:context.absolute_url()}/edit"
                 data-pat-plone-modal="modalSizeClass: modal-xl;"
                 i18n:translate=""
              >
                            Edit
              </a>
              <a class="pat-plone-modal btn btn-danger"
                 href="${python:context.absolute_url()}/delete_confirmation"
                 data-pat-plone-modal='{"actionOptions": {"redirectOnResponse": true, "redirectToUrl": "${context/aq_parent/absolute_url}"}}'
                 i18n:translate=""
              >
                            Delete
              </a>
            </tal:block>
          </div>

          <div class="tab-pane fade"
               id="tab-members"
               aria-labelledby="members-tab"
               role="tabpabel"
               tal:condition="is_admin"
          >
            <ol class="list-group list-group-numbered">
              <li class="list-group-item"
                  tal:repeat="member members"
              >
                <a href="${member/absolute_url}">
                                ${member/customer_id} - ${member/title} (${member/email|string:kein EMail!})
                </a>
              </li>
            </ol>
            <div class="mt-2"
                 tal:condition="members"
            >
              <a class="btn btn-secondary btn-sm me-3"
                 href="mailto:office@lfvbg.at?bcc=${view/all_members_mailaddress}"
                 i18n:translate=""
              >Send Email to all members</a>
              <a class="btn btn-secondary btn-sm"
                 href="${context/absolute_url}/@@coursetool_utils/member_export"
                 i18n:translate=""
              >Export member data as XLSX</a>
            </div>
            <span class="text-muted fs-sm"
                  tal:condition="not:members"
                  i18n:translate=""
            >
                        No members found.
            </span>
          </div>
        </div>

        <div class="card-footer">
          <div id="viewlet-above-content-body"
               tal:condition="can_add_to_cart"
               tal:content="structure provider:plone.abovecontentbody"
          ></div>
          <div class="alert alert-primary mb-0"
               tal:condition="python:not can_add_to_cart and not is_admin"
               i18n:translate=""
          >
                    You're already registered for this course
          </div>
        </div>

      </div>
    </div>
  </body></html>

<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      lang="en"
      metal:use-macro="context/@@main_template/macros/master"
      xml:lang="en"
      i18n:domain="collective.coursetool"
>

  <body>
    <metal:main fill-slot="main"
                tal:define="
                  batch view/batch;
                  columns view/columns;
                "
    >

      <a class="btn btn-sm btn-outline-primary mb-3"
         href="${python:context.aq_parent.absolute_url()}"
      >
        <tal:icon replace="structure python:icons.tag('arrow-left-circle', tag_class='plone-icon')" />
        <span i18n:translate="">Back to course portal</span>
      </a>

      <h1 class="mb-3"
          i18n:translate=""
      >Exams</h1>

      <metal:filter use-macro="context/@@coursetool_listing_macros/macros/filter">
        <div class="col-12"
             metal:fill-slot="archive-checkbox"
        >
          <div class="form-check">
            <input class="form-check-input"
                   id="checkbox-show-archived"
                   checked="${python:'checked' if request.get('show-archived') else None}"
                   name="show-archived"
                   onclick="form.submit()"
                   type="checkbox"
                   value="archived"
            />
            <label class="form-check-label"
                   for="checkbox-show-archived"
                   i18n:translate=""
            >Show archived exams</label>
          </div>
        </div>
        <a class="btn btn-success"
           href="${context/absolute_url}/++add++coursetool.exam"
           metal:fill-slot="add-button"
           i18n:translate=""
        >Add Exam</a>
      </metal:filter>

      <metal:table use-macro="context/@@coursetool_listing_macros/macros/batch_table" />

    </metal:main>
  </body>

</html>
